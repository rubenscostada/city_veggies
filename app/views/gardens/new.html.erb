<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <h1>Add a new garden to <em>City Veggies</em></h1>

      <%= simple_form_for @garden do |f| %>
        <%= f.input :country, as: :string %>
        <%= f.input :name %>
        <%= f.input :description %>
        <%= f.input :price_per_month %>
        <%= f.input :photo, as: :file %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
</div>
